{
  "min_packer_version": "1.1.2",
  "variables": {
    "aws_region": "ap-southeast-1",
    "ami_base_name": "private-tfe",
    "subnet_id": "",
    "temporary_security_group_source_cidr": "0.0.0.0/0",
    "associate_public_ip_address": "true",
    "ssh_interface": ""
  },
  "builders": [
    {
      "name": "private-tfe-ami",
      "ami_name": "{{ user `ami_base_name` }}-{{isotime | clean_ami_name}}",
      "ami_description": "An Ubuntu 16.04 AMI that has private Terraform installed.",
      "instance_type": "t2.micro",
      "region": "{{user `aws_region`}}",
      "type": "amazon-ebs",
      "subnet_id": "{{user `subnet_id`}}",
      "associate_public_ip_address": "{{user `associate_public_ip_address`}}",
      "ssh_interface": "{{user `ssh_interface`}}",
      "temporary_security_group_source_cidr": "{{user `temporary_security_group_source_cidr`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "name": "*ubuntu-xenial-16.04-amd64-server-*",
          "block-device-mapping.volume-type": "gp2",
          "root-device-type": "ebs"
        },
        "owners": [
          "099720109477"
        ],
        "most_recent": true
      },
      "ssh_username": "ubuntu",
      "run_tags":{
        "Name": "{{user `ami_base_name` }}-{{isotime | clean_ami_name}}",
        "Base Name": "{{user `ami_base_name` }}",
        "Timestamp": "{{isotime \"2006-01-02 03:04:05\"}}",
        "Packer": "yes"
      },
      "tags": {
        "Name": "{{user `ami_base_name` }}-{{isotime | clean_ami_name}}",
        "Base Name": "{{user `ami_base_name` }}",
        "Timestamp": "{{isotime \"2006-01-02 03:04:05\"}}",
        "Packer": "yes"
      },
      "snapshot_tags": {
        "Name": "{{user `ami_base_name` }}-{{isotime | clean_ami_name}}",
        "Base Name": "{{user `ami_base_name` }}",
        "Timestamp": "{{isotime \"2006-01-02 03:04:05\"}}",
        "Packer": "yes"
      }
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "pause_before": "10s",
      "playbook_file": "{{ template_dir }}/site.yml",
      "extra_arguments": [
        "-e",
        "ansible_python_interpreter=/usr/bin/python3"
      ]
    }
  ]
}
